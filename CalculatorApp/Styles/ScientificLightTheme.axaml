<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <Border Padding="20">
      <!-- Add Controls for Previewer Here -->
    </Border>
  </Design.PreviewWith>

  <StyleInclude Source="avares://CalculatorApp/Styles/ScientificShared.axaml"/>

  <Style Selector="Window">
    <Setter Property="Background" Value="#e9ecce"/>
  </Style>

  <Style Selector="Button.sciRectangle">
    <Setter Property="Background" Value="#d6e5bd"/>
    <Setter Property="Foreground" Value="#4c454c"/>
  </Style>

  <Style Selector="Button.sciRectangle.operator">
    <Setter Property="Background" Value="#f2d894"/>
  </Style>

  <Style Selector="Button.sciRectangle.side">
    <Setter Property="Background" Value="#cbd3ad"/>
  </Style>

  <Style Selector="Button.sciRectangle.scientific">
    <Setter Property="Background" Value="#96b083"/>
  </Style>

  <Style Selector="TextBlock.display">
    <Setter Property="Foreground" Value="#4c454c"/>
  </Style>

  <Style Selector="Path.icon">
    <Setter Property="Fill" Value="#4c454c"/>
  </Style>
</Styles>
