<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <Border Padding="20">
      <!-- Add Controls for Previewer Here -->
    </Border>
  </Design.PreviewWith>

  <StyleInclude Source="avares://CalculatorApp/Styles/StandardShared.axaml"/>

  <!-- Add Styles Here -->
  <Style Selector="Window">
    <Setter Property="Background" Value="#1e1f1a"/>
  </Style>

  <Style Selector="Button.rectangle">
    <Setter Property="Background" Value="#495442"/>
    <Setter Property="Foreground" Value="#f0f0f0"/>
  </Style>

  <Style Selector="Button.rectangle.operator">
    <Setter Property="Background" Value="#a17c33"/>
  </Style>

  <Style Selector="Button.rectangle.side">
    <Setter Property="Background" Value="#677353"/>
  </Style>

  <Style Selector="TextBlock.display">
    <Setter Property="Foreground" Value="#f0f0f0"/>
  </Style>

  <Style Selector="Path.icon">
    <Setter Property="Fill" Value="#f0f0f0"/>
  </Style>
</Styles>
