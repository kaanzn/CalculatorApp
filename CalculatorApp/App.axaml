<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CalculatorApp.App"
             xmlns:local="using:CalculatorApp"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <Style Selector="Button.circular">
            <Setter Property="Width" Value="90"/>
            <Setter Property="Height" Value="90"/>
            <Setter Property="CornerRadius" Value="45"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#232b2b"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="40"/>
        </Style>
        <Style Selector="Button.circular.orange">
            <Setter Property="Background" Value="#e76822"/>
        </Style>
        <Style Selector="Button.circular.gray">
            <Setter Property="Background" Value="#414a4c"/>
        </Style>

        <!--Colorful Theme-->

        <Style Selector="Button.rectangle">
            <Setter Property="Width" Value="90"/>
            <Setter Property="Height" Value="90"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#d6e5bd"/>
            <Setter Property="Foreground" Value="#4c454c"/>
            <Setter Property="FontSize" Value="40"/>
        </Style>
        <Style Selector="Button.rectangle.dark">
            <Setter Property="Background" Value="#cbd3ad"/>
        </Style>
        <Style Selector="Button.rectangle.color">
            <Setter Property="Background" Value="#f2d894"/>
        </Style>

        <Style Selector="Button:pressed">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="80"/>
        </Style>
    </Application.Styles>

